<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pr_icon"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/product1" />

    <TextView
        android:id="@+id/pr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【泰国进口】泰国金枕榴莲"
        android:textColor="#151515"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pr_activity1"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:background="@drawable/background_rectangle_pr_orange"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="首单包邮"
            android:textColor="#fa580d"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/pr_activity2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/background_rectangle_pr_orange"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="花呗支付"
            android:textColor="#fa580d"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:src="@drawable/pr_unit" />

        <TextView
            android:id="@+id/pr_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="69.9"
            android:textColor="#e12f25"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pr_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已卖300件"
            android:textColor="#9c9c9c"
            android:layout_gravity="center_vertical"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>