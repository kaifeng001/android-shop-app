<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/care_first_star"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_care_star_light" />

    <ImageView
        android:id="@+id/care_second_star"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginRight="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_care_star_light" />

    <ImageView
        android:id="@+id/care_third_star"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginRight="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_care_star_light" />

    <ImageView
        android:id="@+id/care_fourth_star"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginRight="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_care_star_light" />

    <ImageView
        android:id="@+id/care_fifth_star"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:scaleType="fitXY"
        android:src="@mipmap/search_care_star_normal" />

    <TextView
        android:id="@+id/care_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="4.5"
        android:textColor="#FFA5A5A5"
        android:textSize="12sp" />
</merge>